<% include ./partials/header %>

<div class="container">
    <div class="form-style">
        <div id="login-div">
            <div class="login-header">
                <h1><strong>Login</strong></h1>
            </div>
            <!-- Login Form -->
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="email" name="username" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login!</button>
                </div>
            </form>
        </div>
        
        <div id="register-div">
            <div class="login-header">
                <h1><strong>Register</strong></h1>
            </div>
            <!-- Register Form -->
            <form id="new-user-form" action="/register" method="POST">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input class="form-control" type="email" name="username" placeholder="email">
                </div>
                <div class="form-group">
                    <label for="profileName">Username</label>
                    <input class="form-control" type="text" name="profileName" placeholder="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Register!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>